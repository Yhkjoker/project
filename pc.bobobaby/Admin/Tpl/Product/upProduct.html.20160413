function shanchu(val){

			var div=document.getElementById('img'+val)
			div.parentNode.removeChild(div);
			var purl="";
			$("#J_imageView img.allImg").each(function(){
			
			  purl+=$(this).attr("src")+",";

			})
				 if (purl.length > 0) {
					purl = purl.substring(0, purl.length - 1);
				}
			
				document.getElementById("purl").value=purl;
			
			}
